{
  "manifest_version": 3,
  "name": "TabShelf",
  "description": "高效管理浏览器标签页的侧边栏扩展",
  "version": "1.0",
  "permissions": [
    "tabs",
    "sidePanel",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开TabShelf侧边栏"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}